#!/bin/bash

uname=$(whoami)
if [ "Darwin" = $(uname) ]; then
    fullname=$(id -P $uname | awk -F '[:]' '{print $8}')
else
    fullname=$(getent passwd $uname | cut -d: -f5 | cut -d, -f1)
fi

docker run -it \
    --mount "type=bind,src=$(pwd),dst=/repo" \
    --mount "type=bind,src=$HOME,dst=/home" \
    -e "SQITCH_USER=$uname" \
    -e "SQITCH_USER_NAME=$fullname" \
    -e "SQITCH_USER_NAME=$uname@$(hostname)" \
    sqitch $@
